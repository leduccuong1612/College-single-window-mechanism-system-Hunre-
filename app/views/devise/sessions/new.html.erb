
<section class="section">
	<div class="container">
		<div class="columns is-centered">
			  <div class="column is-4 box has-background-grey-lighter">
				<h2 class="title is-2">Đăng Nhập</h2>
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

				  <div class="field">
				  	<div class="control">
				    	<%= f.input :role_id, label: "Tên Tài Khoản", required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
				    </div>
				  </div>

				  <div class="field">
				  	<div class="control">
				      <%= f.input :password, label: "Mật Khẩu", required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
						</div>
					</div>

					<div class="field">
				  	<div class="control">
				    <%= f.input :remember_me, label: "Ghi nhớ tài khoản của tôi", wrapper: false, as: :boolean if devise_mapping.rememberable? %>
				  	</div>
					</div>

				  <%= f.button :submit, "Đăng Nhập", class:"button is-info is-medium" %>
				<% end %>
				<br/>
				<%= render "devise/shared/links" %>
      </div>
		</div>
	</div>
</section>
