<section class="hero is-success is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-black">Login</h3>
        <hr class="login-hr">
        <p class="subtitle has-text-black">Please login to proceed.</p>
        <div class="box">
          <figure class="avatar">
            <img src="https://placehold.it/128x128">
          </figure>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <div class="control">
                <%= f.input :role_id, class: "input is-large", placeholder: "Your Email", autofocus: "" %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :password, class: "input is-large", placeholder: "Your Email", autofocus: "" %>
                </div>
              </div>

              <div class="field">
                <%= f.input :remember_me, label: "Ghi nhớ tài khoản của tôi", wrapper: false, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <%= f.button :submit, "Đăng Nhập", class:"button is-block is-info is-large is-fullwidth" %>
          <% end %>
        </div>
        <p class="has-text-grey">
          <a href="../">Sign Up</a> &nbsp;
          <%= render "devise/shared/links" %> &nbsp;
          <a href="../">Need Help?</a>
        </p>
      </div>
    </div>
  </div>
</section>
